[colors]
background = #000000
foreground = #ffffff
red = #cc0000
cyan = #00E5E5
green = #00CD00
yellow = #ffff00

[global/wm]
margin-top = 10
margin-bottom = 0

[bar/bottom]
bottom = true
width = 100%
height = 15
offset-x = 0
offset-y = 0

fixed-center = true

spacing = 0
line-size = 2
border-size = 0
border-bottom-size = 1 
border-color = ${colors.foreground}

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = DejaVu Sans Mono:pixelsize=8.5;0

module-margin = 0

modules-left = i3
modules-center = song
modules-right = brightness volume time ip battery

[module/i3]
type = internal/i3

label-focused = %name% 
label-focused-foreground = ${colors.cyan}
label-focused-padding = 1 
label-focused-border-color = #FFFFFF

label-unfocused = %name%
label-unfocused-padding = 1 

label-urgent = %name%
label-urgent-foreground = ${colors.red}
label-urgent-padding = 0 

label-visible = %name%
label-visible-padding = 0 

[module/battery]
type = internal/battery
battery = BAT0

label-charging = |%percentage%%
label-discharging = |%percentage%%

[module/time]
type = internal/date
interval = 10

;Add %date% to display date
date = "%Y-%m-%d"
date-alt = %a %d %b %Y

time = %H:%M
time-full = %H:%M:%S

label = |%time%

[module/interface]
;Displays network interface
type = custom/script
exec = bash ~/i3wm/i3/Scripts/interface.sh

label = |%output%

[module/ip]
type = custom/script
exec = ip addr | ag "inet " | tr "/" " " | awk '{if (NR!=1) {print $2}}'
label = |%{F#00CD00}%output%

[module/volume]
type = custom/script
interval = 5 
exec = amixer -M | grep Mono | awk 'NR==2 {print $4}' | sed 's/[^0-9]*//g'
label = |V:%{F#00E5E5}%output%%

[module/brightness]
type = custom/script
interval = 5
exec = xrandr --verbose | grep "Brightness" | awk '{print $2}' | sed 's/^0.//' 
label = |B:%{F#00E5E5}%output%%

[module/song]
type = custom/script
interval = 5 
exec = spotify-cli --status
label = [%output%]
label-maxlen = 45 
