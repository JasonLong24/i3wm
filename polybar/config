[colors]
background = #000000
background-alt = #444
foreground = #ffffff
red = #cc0000
cyan = #00E5E5
green = #00CD00
yellow = #ffff00
orange = #ffb52a

[global/wm]
margin-top = 10
margin-bottom = 0

[bar/bottom]
bottom = true
width = 100%
height = 15
offset-x = 0
offset-y = 0

fixed-center = true

spacing = 0
line-size = 2
border-size = 0
border-bottom-size = 1 
border-color = ${colors.foreground}

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = DejaVu Sans Mono:pixelsize=8.5;0

module-margin = 0

modules-left = i3
modules-center = error 
modules-right = song updates brightness volume time wlan ip battery

[module/i3]
type = internal/i3

label-focused = %name%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.foreground} 
label-focused-padding = 1 
label-focused-border-color = #FFFFFF

label-unfocused = %name%
label-unfocused-padding = 1 

label-urgent = %name%
label-urgent-background = ${colors.red}
label-urgent-padding = 1 

label-visible = %name%
label-visible-padding = 1 

[module/battery]
type = internal/battery
battery = BAT0

label-charging = |%percentage%%
label-discharging = |%percentage%%

[module/time]
type = internal/date
interval = 10

;Add %date% to display date
date = "%Y-%m-%d"

time = %I:%M
time-alt = %m-%d-%Y %I:%M:%S
click-left = uxterm -hold -e cal

label = |%time%

[module/interface]
;Displays network interface
type = custom/script
exec = bash ~/i3wm/i3/Scripts/interface.sh

label = |%output%

[module/ip]
type = custom/script
exec = ip addr | ag "inet " | tr "/" " " | awk '{if (NR!=1) {print $2}}'
label = |%{F#00CD00}%output%
click-left = uxterm -hold -e nmtui

[module/volume]
type = custom/script
interval = 5 
exec = amixer -M | grep Mono | awk 'NR==2 {print $4}' | sed 's/[^0-9]*//g'
label = |V:%{F#00E5E5}%output%%
click-left = uxterm alsamixer 

[module/brightness]
type = custom/script
interval = 5
exec = xbacklight | grep -o '^[0-9]*\.[0-9]' 
label = |B:%{F#00E5E5}%output%%

[module/updates]
type = custom/script
interval = 180
exec = apt-get upgrade -s | grep -P '^\d+ upgraded' | cut -d" " -f1
label = |U:%{F#00E5E5}%output%
click-left = uxterm -hold -e sudo apt-get upgrade

[module/song]
type = custom/script
interval = 5 
exec = ~/i3wm/zsh/scripts/spotify-info.sh title 
label = |%{F#ffb52a}%output%
click-left = i3-msg '[class="Spotify"] focus' 
label-maxlen = 45 

[module/error]
type = custom/script
interval = 3 
exec = bash ~/i3wm/polybar/error.sh

[module/wlan]
type = custom/script 
interval = 5 

exec = iwgetid -r
label = |%{F#00CD00}%output%
click-left = uxterm -hold -e nmtui
