[colors]
background = #000000
background-alt = #444
foreground = #ffffff
red = #cc0000
cyan = #00E5E5
green = #00CD00
yellow = #ffff00
orange = #ffb52a

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/bottom]
bottom = true
width = 100%
height = 15
offset-x = 0
offset-y = 0

fixed-center = true

spacing = 0
line-size = 2
border-size = 0

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = misc fixed:pixelsize=12;1
font-1 = DejaVu Sans Mono:pixelsize=8.5;0

module-margin = 2

modules-left = i3 xtitle
modules-center =
modules-right = time wlan ip battery

[module/i3]
type = internal/i3

label-focused = %name%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.foreground}
label-focused-padding = 1
label-focused-border-color = #FFFFFF

label-unfocused = %name%
label-unfocused-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.red}
label-urgent-padding = 1

label-visible = %name%
label-visible-padding = 1

[module/battery]
type = internal/battery
battery = BAT0

label-charging = %percentage%%
label-discharging = %percentage%%

[module/time]
type = internal/date
interval = 10

;Add %date% to display date
date = "%Y-%m-%d"

time = %I:%M
time-alt = %m-%d-%Y %I:%M:%S
click-left = uxterm -hold -e cal

label = %time%

[module/interface]
;Displays network interface
type = custom/script
exec = bash ~/i3wm/i3/Scripts/interface.sh

label = %output%

[module/ip]
type = custom/script
exec = ip addr | ag "inet " | tr "/" " " | awk '{if (NR!=1) {print $2}}'
label = %{F#00CD00}%output%
click-left = uxterm -hold -e nmtui

[module/volume]
type = custom/script
interval = 5
exec = amixer -M | grep Mono | awk 'NR==2 {print $4}' | sed 's/[^0-9]*//g'
label = V:%{F#00E5E5}%output%%
click-left = uxterm alsamixer

[module/brightness]
type = custom/script
interval = 5
exec = xbacklight | grep -o '^[0-9]*\.[0-9]'
label = B:%{F#00E5E5}%output%%

[module/wlan]
type = custom/script
interval = 5
exec = iwgetid -r
label = %{F#00CD00}%output%
click-left = uxterm -hold -e nmtui

[module/xtitle]
type = custom/script
interval = 1
exec = cat /proc/$(xdotool getwindowpid $(xdotool getwindowfocus))/comm
label = []=%output%
label-maxlen = 20
